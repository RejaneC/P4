{% extends 'template.html.twig' %}


{% block body %}

<section class="chapters mt-5">
    <div class="container">

        <div class="wrapper">

            <div class="row chapters-titre">

                <div class="col-lg-12">
                    <h2 class="chapters-titre-h2 h2 text-center text-uppercase font-weight-bold">Sommaire des chapitres publiés</h2>
                </div>
            </div>

            <div class="row chapters-content">
                <div class="col-lg-12">

                    <ul class="chapters-list text-center mt-5">

                        {% for chapter in chapters %}  {# Pour chaque chapitre, dans mon tableau de chapitres #}
                            <li class="chapters-list-item">
                                <a class="chapters-list-item-link" href="/chapitre-{{ chapter.num_chap }}/{{ chapter.title|slug }}/{{ chapter.id }}">
                                    Chapitre {{ chapter.num_chap|number_format }} - {{ chapter.title }}
                                </a>
                            </li>
                        {% endfor %}
                    
                    </ul>

                </div>
            </div>
        </div>

    </div>
</section>


{# FOOTER #}
<section class="footer w-100 mt-5">

    <div class="container">

        <div class="row row-footer">

            <div class="footer-contact col-lg-6 footer-adresse d-flex flex-column justify-content-center align-items-left">
                <p class="footer-titre-contact font-weight-bold">Me contacter</p>
                <p class="footer-contact-email">hello@jeandelaroche.me</p>
            </div>

            <div class="footer-form col-lg-6 d-flex flex-column">
                <p class="footer-titre-nl font-weight-bold">Recevez le dernier chapitre dès sa sortie !</p>
                <form class="footer-form-input-group d-flex align-items-center">
                    <input type="email" name="email" class="form-control form-nl w-100 rounded" placeholder="Email">
                    <button type="submit" class="btn btn-default px-4 ml-1">Envoyer</button>
                </form>
            </div>

        </div>

    </div>

</section>


{% endblock %}


